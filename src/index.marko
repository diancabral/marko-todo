$ {

    const getFilteredItems = () => {

        let items = state.items

        if(state.filter === 'active'){

            items = state.items.filter(({ done }) => !done)

        } else if(state.filter === 'completed'){

            items = state.items.filter(({ done }) => done)

        }

        return items

    }

